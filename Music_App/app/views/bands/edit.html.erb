<h2> Edit Your Band </h2>

<form action="<%= band_url(@band) %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <%= auth_token %>
  <label for="name">Band Name:
    <input type="text" name="band[name]"
      value="<%= @band.name %>">
  </label>
  <br>
  <input type="submit" value="Update Band" class="btn btn-primary">
</form>